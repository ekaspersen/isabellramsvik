

model Image {
  id              Int      @id @default(autoincrement())
  url             String
  cloudinaryId    String?  // Ensure this field is present
  title           String?
  description     String?
  position        Int?
  displayInGallery Boolean @default(true)
  projectId       Int?
  project         Project? @relation(fields: [projectId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  images      Image[]
  createdAt   DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String
  phone     String?
  wish      String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
  favorite  Boolean  @default(false)
}